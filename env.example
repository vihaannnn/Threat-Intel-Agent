# Threat Intelligence Agent - Environment Configuration
# Copy this file to .env and fill in your API keys

# === Required API Keys ===
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key-here

# === Optional API Keys ===
# Get Serper API key from: https://serper.dev/ (for Google search)
SERPER_API_KEY=your-serper-key-here

# === Model Configuration ===
# OpenAI model to use (gpt-4o-mini, gpt-4o, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4o-mini

# === Server Configuration ===
# MCP server authentication key
MCP_API_KEY=demo123

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === Local Model Configuration ===
# Set to true to prefer local models over OpenAI
PREFER_LOCAL_MODELS=false

# Preferred local model (if available)
PREFERRED_LOCAL_MODEL=llama-3.1-70b





